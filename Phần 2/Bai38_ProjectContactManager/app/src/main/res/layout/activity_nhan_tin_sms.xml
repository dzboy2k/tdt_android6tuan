<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".NhanTinSmsActivity">

    <TextView
        android:id="@+id/txtNguoiNhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Người nhận ở đây"
        android:textColor="#A71F1F"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99BBA8"
        android:text="Nội dung tin nhắn"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtNoiDung"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:ems="10"
        android:gravity="top"
        android:hapticFeedbackEnabled="false"
        android:inputType="textMultiLine"
        android:text="Xin chào! Tui là tui ..." />

    <ImageButton
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/send_sms" />
</LinearLayout>